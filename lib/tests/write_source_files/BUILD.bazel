    out_file = "g.js",
)

write_source_file(
    name = "hidden_dir_test",
    in_file = ":hidden_dir-desired",
    out_file = "hidden_dir",
)

write_source_files(
    name = "macro_smoke_test",
    additional_update_targets = [
        "//lib/tests/write_source_files/subdir:macro_smoke_test",
    ],
